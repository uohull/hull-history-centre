<div id="content" class="col-md-12 show-document">

  <%= render 'previous_next_doc' %>
  <%= render 'catalog/breadcrumbs', document: @document %>

  <% @page_title = t('blacklight.search.show.title', :document_title => document_show_html_title, :application_name => application_name).html_safe -%>
  <% content_for(:head) { render_link_rel_alternates } -%>

  <% is_collection = @document['type_ssi'] == 'collection' %>
  <% document_col_class = is_collection ? 'col-md-12' : 'col-md-8' %>

  <div id="document" class="document <%= document_col_class %> <%= render_document_class %>" itemscope itemtype="<%= @document.itemtype %>">
    <div id="doc_<%= @document.id.to_s.parameterize %>">
      <%= render_document_partials @document, blacklight_config.view_config(:show).partials %>
    </div>
  </div>

  <% unless is_collection %>
    <div id="sidebar" class="col-md-4">
      <%= render 'catalog/availability_sidebar',
                  document: @document %>
    </div>
  <% end %>

</div>
